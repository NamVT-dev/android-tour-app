<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#1E1230"
    tools:context="vn.edu.fpt.prm.features.profile.activities.EditProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:text="@string/edit_profile_title"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="5dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/cd_avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnCamera"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="@string/cd_open_camera"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnGallery"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="@string/cd_open_gallery"
                android:src="@android:drawable/ic_menu_upload"
                app:tint="@android:color/white" />
        </LinearLayout>

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_hint"
            android:autofillHints="name"
            android:textColorHint="#CCCCCC"
            android:textColor="#FFFF00"
            android:inputType="textPersonName"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:autofillHints="emailAddress"
            android:textColorHint="#CCCCCC"
            android:textColor="#FFFF00"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <!-- Password Fields -->
        <LinearLayout
            android:id="@+id/passwordContainer"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/current_password"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:textColor="#FFFF00"
                android:minHeight="48dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_password"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:textColor="#FFFF00"
                android:minHeight="48dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_password"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:textColor="#FFFF00"
                android:minHeight="48dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnChangePassword"
                android:text="@string/change_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnSave"
                android:text="@string/save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCancel"
            android:text="@string/cancel"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
